<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:background="#ffffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:text="Power"
                android:id="@+id/textView"
                android:layout_weight="0.04" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/toggleButton"
                android:background="@drawable/ic_toggle_bg"
                android:id="@+id/toggleButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp" />



            <TextView
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:text="Channels"
                android:id="@+id/textView2"
                android:layout_weight="0.04"
                android:layout_marginTop="30dp" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="220dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/suntv"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:maxWidth="5dp"
                    android:background="@drawable/sun_tv"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/sunmusic"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:maxWidth="5dp"
                    android:background="@drawable/sun_music"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/ktv"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:maxWidth="5dp"
                    android:background="@drawable/ktv"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/aadithiya"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:maxWidth="5dp"
                    android:background="@drawable/aadithiya"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/vijaytv"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:maxWidth="5dp"
                    android:background="@drawable/vijaytv"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sun_news"
                    android:id="@+id/sunnews"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:maxWidth="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_world"
                    android:id="@+id/starworld"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:maxWidth="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fox_crime"
                    android:id="@+id/foxcrime"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:maxWidth="5dp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nat_geo"
                    android:id="@+id/natgeo"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:maxWidth="5dp" />



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/history"
                    android:id="@+id/history"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:maxWidth="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_movies"
                    android:id="@+id/starmovies"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:maxWidth="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mn_plus"
                    android:id="@+id/mnplus"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:maxWidth="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/zee_studio"
                    android:id="@+id/zstudio"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:maxWidth="5dp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sony_pix"
                    android:id="@+id/sonypix"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:maxWidth="5dp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hbo"
                    android:id="@+id/hbo"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:maxWidth="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_sports_hd1"
                    android:id="@+id/sphd1"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:maxWidth="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_sports_hd2"
                    android:id="@+id/sphd2"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:maxWidth="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_sports_hd3"
                    android:id="@+id/sphd3"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:maxWidth="5dp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_sports_hd4"
                    android:id="@+id/sphd4"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:maxWidth="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hbo"
                    android:id="@+id/hb0"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:maxWidth="5dp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sony_six"
                    android:id="@+id/sonysix"
                    android:layout_row="6"
                    android:layout_column="2"
                    android:maxWidth="5dp" />
            </GridLayout>
        </ScrollView>



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.04"
                android:stretchColumns="2"
                android:layout_marginTop="20dp">
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume Control"
                        android:id="@+id/textView4"
                        android:layout_weight="0.04"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Program Control"
                        android:id="@+id/textView3"
                        android:layout_weight="0.04"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right"
                        android:layout_column="5" />

                </TableRow>
                <TableRow>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/volup" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:id="@+id/pgmup"
                        android:layout_column="5" />
                </TableRow>
                <TableRow>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/volddown" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/pgmdown"
                        android:layout_column="5" />
                </TableRow>


            </TableLayout>


        </LinearLayout>
    </RelativeLayout>
